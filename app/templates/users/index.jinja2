{% extends "base.jinja2" %}
{% from 'bootstrap5/utils.html' import render_icon %}
{% from 'macros/component_confirm_modal.jinja2' import confirmModalMacro, confirmModalScript %}

{% block title %}Users{% endblock %}
{% block head %}
{{ super() }}
<style type="text/css">
    .important {
        color: #336699;
    }
</style>
{% endblock %}

{% block content %}
<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h1>Gerenciar {{title}}</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <!--tr>
                {% for field in list_fields %}
                <th>{{ field }}</th>
                {% endfor %}
                <th>Options</th>
            </tr-->
            <tr>

                
                <th>Id escola</th>
                
                <th>Nome</th>
                
                <th>Nome de usuário</th>
                
                <th>Email</th>
                
                <th>Estudante</th>
                <th></th>
                <th>Opções</th>
            
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                {% for field in list_fields %}
                <td>{{ entity[field] }}</td>
                {% endfor %}
                <td>
                    <a class="btn" href="{{ url_for('users.edit', id=entity.id) }}" data-toggle="tooltip"
                        data-placement="top" title="Tooltip on top"><i title="Edit"> {{
                            render_icon('pencil-square') }}</i></a>
                    <a  href="#" class="btn clickForActionToConfirm" entity-id="{{entity.id}}" data-bs-toggle="modal"
                        data-bs-target="#modalConfirm" data-entity-reference="{{entity.username}}"
                        data-action="{{url_for('users.delete', id=entity.id)}}" data-action-text="delete" title="delete">
                        {{render_icon('x-circle') }}
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{{ confirmModalMacro() }}
{% endblock %}

{% block scripts %}
{{ super() }}
<!-- The contents of myscript.js will be loaded inside the script tag -->
{{ confirmModalScript() }}
{% endblock %}